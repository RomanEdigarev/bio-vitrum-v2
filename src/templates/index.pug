extends ../layouts/indexBase

block content
    main.main.main-index
        section.first-section(id="firstSection")
            .titles-container
                +TitleWithLine("Диагностика спасающая жизни", "Для нас каждый клинический <br/> случай – это жизнь и судьба реального человека")
            .first-section__btn
                +ScrollDownButton
            .first-section__navigation
                +Navigation(data.navigation.links)
        section.second-section(id="secondSection")
            .second-section__title-container
                h2.second-section__title Деятельность
            .second-section__links
                each val, key in data.activity.links
                    .second-section__link
                        +UnderlineLink(val, key, "large", "left")
        section.third-section(id="thirdSection")
            +ServicesBlock
        section.fourth-section
            +NewsBlock
        img.index-bg-image(src="./assets/images/3.png" id="indexBgImage")